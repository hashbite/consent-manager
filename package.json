{
  "name": "consent-manager-monorepo",
  "private": true,
  "author": {
    "name": "hashbite",
    "email": "opensource@hashbite.net",
    "url": "https://hashbite.net/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hashbite/consent-manager"
  },
  "scripts": {
    "lerna": "lerna",
    "start": "lerna run start --stream --parallel",
    "test": "lerna run test --",
    "lint": "lerna run lint -- --fix",
    "build": "lerna run build",
    "cleanup": "lerna exec -- rm -rf ./dist",
    "prepublish": "yarn run cleanup && lerna run prepublish --scope='@consent-manager/core' && lerna run prepublish --ignore='@consent-manager/core'",
    "start:app": "yarn run build && yarn --cwd example && yarn --cwd example start",
    "cypress": "cypress run",
    "cypress:open": "cypress open",
    "changeset": "changeset",
    "release": "changeset publish",
    "version:canary": "changeset version --snapshot canary",
    "release:canary": "changeset publish --tag canary"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.4.2",
    "@changesets/cli": "2.18.1",
    "@types/react": "16.14.21",
    "@types/react-dom": "16.9.14",
    "cypress": "5.6.0",
    "lerna": "3.22.1",
    "react": "16.14.0",
    "react-dom": "16.14.0",
    "tsdx": "0.14.1",
    "typescript": "3.9.10",
    "typescript-plugin-css-modules": "3.2.0"
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ]
}
