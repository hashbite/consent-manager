{
  "extends": "./tsconfig.build.json",
  "include": ["packages", "types", "scripts", "example"],
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types", "./types"],
    "paths": {
      "$test/*": ["test/*"],
      "@consent-manager/*": ["packages/*"]
    },
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  }
}
